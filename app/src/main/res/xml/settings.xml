<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Appearance">

        <ListPreference
            android:defaultValue="auto"
            android:entries="@array/app_theme_entries"
            android:entryValues="@array/app_theme_entry_values"
            android:key="app_theme"
            android:title="Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Editor">

        <SeekBarPreference
            android:defaultValue="14"
            android:key="font_size"
            android:max="32"
            android:summary="Set the font size for the editor"
            android:title="Font Size"
            app:min="12"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:defaultValue="4"
            android:key="tab_size"
            android:max="14"
            android:summary="Set the tab size for the editor"
            android:title="Tab Size"
            app:min="2"
            app:showSeekBarValue="true" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="use_spaces"
            android:summary="Use spaces instead of tabs for indentation in the editor"
            android:title="Use spaces instead of tabs" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Compiler">

        <Preference
            android:key="plugins"
            android:summary="Unsupported for now"
            android:title="Plugins" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="use_fastjarfs"
            android:summary="This experimental mode may speed up compilation time, but use with caution"
            android:title="Use fast implementation for Jar FS" />


        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="use_k2"
            android:summary="This experimental mode may speed up compilation time, but use with caution"
            android:title="Use K2 compiler for compilation" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="use_ssvm"
            android:summary="This is a very experimental feature. Use with caution."
            android:title="Use SSVM for running" />

        <ListPreference
            android:defaultValue="17"
            android:entries="@array/java_version_entries"
            android:entryValues="@array/java_version_entries"
            android:key="java_version"
            android:summary="Select the version of Java to use for compilation"
            android:title="Java Version" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:key="version"
            android:title="Version" />

    </PreferenceCategory>

</PreferenceScreen>